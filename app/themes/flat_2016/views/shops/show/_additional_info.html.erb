<div class="pannacotta additional-info">

  <div class="row">

    <div class="col-xs-12 hidden-xs hidden-sm">

      <div class="shop-header-logo">

        <a class="fallback_link" data-shop="<%= shop.title if shop.title.present? rescue nil %>" href="<%= cloak_url_string(shop.fallback_url) if shop.fallback_url.present? rescue nil %>" rel="nofollow" target="_blank">

            <%= render partial: 'shops/shared/logo', locals: {shop: shop, css_class: '', height: 200, width: 200} %>

        </a>

      </div>
      <!-- /.shop-header-logo hidden-md hidden-lg -->

    </div>
    <!-- /.col-xs-12 -->

    <div class="col-xs-12 col-sm-6 col-md-12">

      <div class="shop-rating">

        <%= render partial: 'shops/show/shop_rating', locals: {shop: shop} %>

      </div>

    </div>

    <%- if show_premium_summary_widget_in_content?(shop) %>

      <div class="col-xs-12 col-sm-6 col-md-12">

        <%= render partial: 'shops/show/welcome_text', locals: { shop: shop } %>

      </div>

    <%- elsif !show_summary_widget_in_content?(shop) -%>

      <div class="col-xs-12">

        <%= render_summary_widget(params[:controller] == 'shops' ? @shop : @campaign) %>

      </div>

    <%- end -%>

    <!-- /.col-xs-12 -->

    <%- if shop.fallback_url.present? || shop.info_address.present? -%>

      <div class="col-xs-12 hidden-xs hidden-sm">

        <h3><%= t(:ABOUT, default: 'ABOUT') %> <%= shop.title %></h3>

        <%- if shop.info_address.present? -%>

            <%= simple_format shop.info_address.html_safe %>

        <%- end -%>

        <%- if shop.info_phone.present? -%>

            <%= simple_format shop.info_phone.html_safe %>

        <%- end -%>

        <%= link_to cloak_url_string(shop.fallback_url), rel: 'nofollow', target: '_blank', class: 'fallback_link', data:{shop: shop.title} do %>

          <i class="pull-left roberto roberto-link-ext"></i>&nbsp;

          <span><%= shop.title %> - <%= t(:OFFICIAL_WEBSITE, default: 'Official Website') %></span>

        <% end %>

      </div>

    <%- end -%>

    <%- if shop.info_free_shipping.present? -%>

       <div class="col-xs-12 hidden-xs hidden-sm">

        <h3><%= t(:INFO_FREE_SHIPPING, default: 'INFO_FREE_SHIPPING') %></h3>

        <%= simple_format shop.info_free_shipping.html_safe %>

      </div>

    <%- end -%>

    <%- if shop.has_valid_payment_methods? -%>

       <div class="col-xs-12 hidden-xs hidden-sm">

        <h3><%= t(:INFO_PAYMENT_METHODS, default: 'INFO_PAYMENT_METHODS') %></h3>

        <p><%= join_info_option_array(:payment_methods, shop.info_payment_methods.reject(&:empty?)) %></p>

      </div>

    <%- end -%>

    <%- if shop.has_valid_delivery_methods? -%>

       <div class="col-xs-12 hidden-xs hidden-sm">

        <h3><%= t(:INFO_DELIVERY_METHODS, default: 'INFO_DELIVERY_METHODS') %></h3>

        <p><%= join_info_option_array(:delivery_methods, shop.info_delivery_methods.reject(&:empty?)) %></p>

      </div>

    <%- end -%>

    <div class="col-xs-12 col-sm-6 col-md-12 hidden-xs hidden-sm">

      <div class="shop-official">

        <h3><%= t(:HOW_TO_USE, default: 'HOW_TO_USE') %></h3>

        <p>

          <span class="help-link" data-modal="help" data-shop="<%= shop.title %>" rel="nofollow">

            <i class="pull-left roberto roberto-help"></i>&nbsp;

            <span><%= t(:LEARN_HOW_TO_USE_COUPONS_ON_THIS_SHOP, default: 'Learn how to use coupons on this shop') %></span>

          </span>

        </p>

      </div>
      <!-- /.shop-official -->

    </div>
    <!-- /.col-xs-12 -->

  </div>
  <!-- /.row -->

</div>
<!-- /.pannacotta additional-info hidden-xs -->

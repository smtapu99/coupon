
<div class="container">

  <div class="row">

    <div class="col-xs-12 visible-xs">

      <div class="search-mobile pannacotta">

        <div>

          <div class="row">

            <form action="<%= dynamic_url_for('search', 'index') %>" role="search">

              <div class="col-xs-12">

                <div class="form-group">

                  <input autocomplete="off" class="form-control input-lg text-center" data-autocomplete-url="<%= url_for send("searches_autocomplete_#{@site.site.id}_path") %>" name="query" placeholder="<%= t(:SEARCH_PLACEHOLDER, default: 'Type a store e.g. Amazon, Ebay, Nike', shops: search_box_placeholder_shops) %>" required type="search" aria-label="<%= t(:SEARCH_PLACEHOLDER, default: 'Type a store e.g. Amazon, Ebay, Nike', shops: search_box_placeholder_shops) %>" >

                </div>

                <!-- /.form-group -->

              </div>

              <!-- /.col-xs-12 -->

              <div class="col-xs-6 col-xs-offset-3">

                <button class="btn btn-block btn-ready" type="submit">

                  <%= t(:SEARCH_BUTTON, default: 'Search') %>

                </button>

              </div>

              <!-- /.col-xs-6 col-xs-offset-3 -->

            </form>

          </div>

          <!-- /.row -->

        </div>

        <!-- /.card-content -->

      </div>

      <!-- /.card card-search-mobile pannacotta -->

    </div>

    <!-- /.col-xs-12 -->

  </div>

  <!-- /.row -->

</div>

<!-- /.container visible-xs -->

<%= render partial: 'shared/navigation_mobile' %>

<div class="pannacotta" id="header" data-event-category="header-start">

  <%- if Setting::get('publisher_site.show_topbar', default: 1).to_i != 0 -%>

    <%= render partial: 'shared/topbar' %>

  <%- end -%>

  <div class="container">

    <div class="row">

      <div class="col-xs-3 col-sm-7 col-sm-push-5">

        <%= render partial: 'shared/navigation' %>

      </div>
      <!-- /.col-xs-3 col-sm-5 col-sm-push-7 -->

      <div class="col-xs-6 col-sm-2 col-sm-pull-7">

        <%= render partial: 'shared/site_logo' %>

      </div>
      <!-- /.col-xs-6 col-sm-2 col-sm-pull-5 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

</div>
<!-- /#header.pannacotta -->

<div class="hero text-center" style="<%= "background-image: url(#{@site.image_setting.hero_url})" if @site.image_setting.hero_url.present? %>">

  <div class="container">

    <div class="row">

      <div class="col-xs-12">

        <div class="headings" role="banner">

          <%= render partial: 'home/index/headlines', locals: {weekly_coupons_count: @weekly_coupons_count} %>

        </div>
        <!-- /.headings text-center -->

        <div class="hidden-xs search-home-header">

          <%= render partial: 'home/index/search_header' %>

        </div>
        <!-- /.hidden-xs search-home-header -->

      </div>
      <!-- /.col-xs-12 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

</div>
<!-- /.hero -->

<%= (content_for?(:after_header)) ? yield(:after_header) : nil %>

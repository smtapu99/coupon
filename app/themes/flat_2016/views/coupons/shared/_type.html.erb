<% if coupon.is_exclusive %>

  <div class="exclusive">

    <p class="coupon-banner text-uppercase">

      <% if coupon.is_exclusive? %>

        <%= t('COUPON_IS_EXCLUSIVE', default: 'Exclusive') %>

      <% elsif defined? is_redirect.is and is_redirect.is === true %>

        <%= t(:GET_THIS_DEAL_NOW, default: 'Get This Deal Now') %>

      <% end %>

    </p>
    <!-- /.coupon-type text-uppercase -->

  </div>
  <!-- /.exclusive -->
<% end %>

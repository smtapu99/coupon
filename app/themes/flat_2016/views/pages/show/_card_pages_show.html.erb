<% if page.title.present? || @content %>

  <div class="card card-text card-pages-show pannacotta">

    <% if page.title.present? %>

    <div class="card-header">

      <h2 class="card-title"><%= page.title %></h2>

      <!-- /.card-title -->

    </div>

    <!-- /.card-header -->

    <% end %>

    <% if @content.present? %>

      <div class="card-content">

        <%= @content.html_safe %>

      </div>

      <!-- /.card-content -->

    <% end %>

  </div>

  <!-- /.card card-pages-show pannacotta -->

<% end %>

<!-- .m-search-box -->

<div class="m-search-box">

  <div class="container">

    <div class="row">

      <div class="col-12 p-0">

        <div class="search-container">

          <div class="search-header">

            <form action="<%= dynamic_url_for('search', 'index') %>" class="m-search-box__form">

              <input autofocus="autofocus" autocomplete="off" class="m-search-box__input" data-autocomplete-url="<%= url_for send("searches_shop_autocomplete_#{@site.site.id}_path") %>" id="input_search_header" name="query" placeholder="<%= t(:SEARCH_PLACEHOLDER, default: 'Type a store e.g. Amazon, Ebay, Nike', shops: search_box_placeholder_shops) %>" required type="search" aria-label="<%= t(:SEARCH_PLACEHOLDER, default: 'Type a store e.g. Amazon, Ebay, Nike') %>">

              <button class="m-search-box__submit" type="submit" role="button" aria-label="<%= t(:SEARCH_BUTTON, default: 'Search') %>">

                <i class="icon-lens"></i>

              </button>

            </form>

          </div>

          <div class="hidden hidden-xs search-header-results" id="search-header-results"></div>

        </div>

      </div>

      <div class="col-12 p-0">

        <%- unless search_box_shops_popular.nil? -%>

          <ul class="m-search-box__popular">

            <%- search_box_shops_popular.each do |shop| -%>

              <li><%= link_to(shop.title, dynamic_url_for('shops', 'show', slug: shop.slug)) %></li>

            <%- end %>

          </ul>

        <%- end %>

      </div>

    </div>

  </div>

</div>

<!-- ./m-search-box -->

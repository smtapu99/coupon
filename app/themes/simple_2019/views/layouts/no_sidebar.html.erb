<% content_for :content do %>

  <%= (content_for?(:before_content)) ? yield(:before_content) : nil %>

  <div class="container">

    <div class="row">

      <div class="col">

        <%= yield :editors_pick if content_for? :editors_pick %>

      </div>

    </div>

    <div class="row">

      <div class="col">

        <% if @h1.present? %>

          <h1 class="page-title"><%= @h1.html_safe %></h1>

        <% end %>

      </div>

    </div>

    <div class="row">

      <div class="col-lg-12" id="content" role="main">

        <%= yield %>

      </div>
      <!-- /#content.col-xs-12 col-sm-12 col-md-8 pannacotta -->

    </div>

    <%- if content_for? :after_content -%>

      <div class="row">

        <div class="col">

          <%= yield :after_content %>

        </div>

      </div>
      <!-- /.row -->

    <%- end -%>

  </div>
  <!-- /.container -->

<% end %>

<%= render template: "layouts/#{@layout}" %>

<div class="container">

  <div class="row">

    <div <%= clickout_params_for_element(coupon, 'li') %> id="<%= coupon.item_id %>" class="coupon coupon--large" data-coupon-id="<%= coupon.id %>" <%= coupon_filter_ids(coupon) %> <%= coupon.is_mobile ? 'data-is-mobile=true' : '' %>>

      <div class="coupon__body">

        <%- if coupon.is_editors_pick? -%>

          <div class="coupon__tag">

            <i class="icon-tag"></i><%= t(:EDITORS_PICK, default: "Editor's Pick") %>

          </div>

        <% end %>

        <div class="coupon__aside">

          <div class="coupon__logo coupon__logo--bg">

            <%= render partial: 'coupons/shared/thumbnail', locals: { coupon: coupon } %>

          </div>

          <%= render partial: 'coupons/shared/type', locals: { coupon: coupon } %>

        </div>

        <div class="coupon__right">

          <div class="coupon__desc">

            <%= content_tag(:h2, coupon.title, class: 'coupon-title') %>

            <%= render partial: 'coupons/shared/description_long', locals: { coupon: coupon } %>

            <div class="coupon__additional">

              <%- if clicks = coupon.random_clickouts_today and clicks.to_i > 0 -%>

              <span class="coupon__clicks">

                <%= clicks %> <%= t(:USED_TODAY, default: 'used today') %>

              </span>

              <%- end -%>

            </div>

          </div>

          <div class="coupon__action">

            <%= render partial: 'coupons/shared/call_to_action', locals: { coupon: coupon } %>

          </div>

        </div>

      </div>

      <div class="coupon__footer">

        <% if strip_tags(coupon.description).length > 200 || info_fields_string(coupon).present? %>

          <span class="coupon__see-details" data-more-text="<%= t(:MORE_DETAILS, default: 'More details') %>" data-less-text="<%= t(:LESS_DETAILS, default: 'Less details') %>">

            <%= t(:MORE_DETAILS, default: 'More details') %>

          </span>

          <i class="icon-double-chevron coupon__icon-chevron"></i>

        <% end %>

        <%
          #<div class="coupon__votes">

          #<a href="" class="vote vote--yes"><i class="icon-thumb-up"></i></a>

          #<a href="" class="vote vote--no"><i class="icon-thumb-down"></i></a>

          #</div>
        %>

      </div>

    </div>

  </div>

</div>

<%- if blog_posts.present? %>
  <div class="box pannacotta blog-posts">
    <div class="box-header">
      <h3 class="box-title"><%= widget.title %></h3>
    </div>
    <div class="box-content">
      <div class="row">
        <div class="col-xs-12">
          <ul class="list-unstyled">
            <%- blog_posts.each do |post| %>
              <li class="text-ellipsis">
                 <span class="list-circle"></span>
                 <a href="<%= post.link %>" target="_blank"><%= post.title %></a> </li>
            <%- end -%>
          </ul>
        </div>
      </div>
    </div>
  </div>
<%- end -%>
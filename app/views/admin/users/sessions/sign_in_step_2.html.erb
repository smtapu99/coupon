<div class='login-container'>

  <div class='container'>

    <div class='row'>

      <div class='col-sm-4 col-sm-offset-4'>

        <h1 class='text-center title'>Sign in</h1>

        <div class="row">

          <%= render partial: 'admin/shared/flash' %>

        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'step-2', class: 'validate-form'}) do |f| %>

          <div class='form-group'>

            <div class='controls with-icon-over-input'>

              <%= f.email_field :email, readonly: true, id: 'user_sign_in_email', class: 'form-control', placeholder: 'E-mail', data: { 'rule-required' => true } %>

              <i class='icon-user text-muted'></i>

            </div>

          </div>

          <div class='form-group'>

            <div class='controls with-icon-over-input'>

              <%= f.password_field :password, id: 'user_sign_in_password', class: 'form-control', placeholder: 'Password', data: { 'rule-required' => true } %>

              <i class='icon-lock text-muted'></i>

            </div>

          </div>

          <% if @user&.otp_module_enabled? && !otp_authenticated? %>

            <div class='form-group' id="otp-code">

              <div class='controls with-icon-over-input'>

                <%= f.text_field :token_otp, id: 'user_sign_in_otp_token', class: 'form-control', placeholder: '2FA Code', data: { 'rule-required' => true } %>

                <i class='icon-lock text-muted'></i>

              </div>

            </div>

          <% end %>

          <%= f.submit 'Sign in', class: 'btn btn-block' %>

        <% end %>

        <%= render "admin/users/shared/links" %>

      </div>

    </div>

  </div>

</div>


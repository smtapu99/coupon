<%- model_class = CouponImport -%>
<div class="row">
  <div class="col-xs-12">
    <div class="page-header">

      <!-- page title -->
      <h1 class="pull-left">
        <i class="icon-tags"></i>
        <span><%=t '.title', :default => model_class.model_name.human.titleize %></span>
      </h1>

      <!-- breadcrumbs -->
      <div class="pull-right">
        <ul class="breadcrumb">
          <li>
            <a href="/pcadmin">
              <i class="icon-tags"></i>
            </a>
          </li>
          <li class="separator">
            <i class="icon-angle-right"></i>
          </li>
          <li class="active"><%= model_class.model_name.human.pluralize.titleize %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<%= render :partial => 'admin/shared/flash' %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @admin_coupon_import.user.full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file) %>:</strong></dt>
  <dd><%= @admin_coupon_import.file_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @admin_coupon_import.status %></dd>
  <%- if @admin_coupon_import.error_messages.present? -%>
    <dt><strong><%= model_class.human_attribute_name(:error_messages) %>:</strong></dt>
    <dd>
      <ul>
        <%- if @admin_coupon_import.error_messages.is_a?(String) -%>
          <li><%= @admin_coupon_import.error_messages %></li>
        <%- end -%>
        <%- @admin_coupon_import.error_messages.each do |message| -%>
          <li><%= message %></li>
        <%- end if @admin_coupon_import.error_messages.is_a?(Array)-%>
      </ul>
    </dd>
  <%- end -%>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_coupon_imports_path, :class => 'btn'  %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_admin_coupon_import_path, :class => 'btn btn-success' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_coupon_import_path(@admin_coupon_import),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<% model_class = Medium %>
<div class="row">
  <div class="col-xs-12">
    <div class="page-header">
      <h1 class="pull-left">
        <i class="icon-upload-alt"></i>
        <span><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></span>
      </h1>
      <div class="pull-right">
        <ul class="breadcrumb">
          <li>
            <a href="/pcadmin">
              <i class="icon-home"></i>
            </a>
          </li>
          <li class="separator">
            <i class="icon-angle-right"></i>
          </li>
          <li class="active"><%= model_class.model_name.human.pluralize.titleize %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<%= render partial: 'admin/shared/flash' %>
<div class="box">
  <div class="box-content">
    <% if can? :create, model_class %>

      <div class="btn-toolbar">

        <%= render 'upload', locals: {new_media: @new_media} %>
        <%# binding.pry %>

        <% if Site.current.blank? %>
          <div class="pull-right" style="">
            <h4>Please Select Site</h4>
            <%=select_tag "site_id", options_from_collection_for_select(User.current.sites, "id", "name", params[:site_id]),
              {:prompt => 'Please select a Site', :class => 'select2 form-control', :id => 'site_select'} %>
          </div>
        <% end %>

      </div>

    <% end %>
    <div class="table-responsive">

      <div id="app"></div>

    </div>
  </div>
</div>

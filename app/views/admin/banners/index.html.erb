<% model_class = Banner %>

<div class="row">

  <div class="col-xs-12">

    <div class="page-header">

      <h1 class="pull-left">

        <i class="icon-globe"></i>

        <span><%= t '.title', default: model_class.model_name.human.pluralize.titleize %></span>

      </h1>

      <div class="pull-right">

        <ul class="breadcrumb">

          <li>

            <a href="/pcadmin">

              <i class="icon-home"></i>

            </a>

          </li>

          <li class="separator">

            <i class="icon-angle-right"></i>

          </li>

          <li><%= model_class.model_name.human.pluralize.titleize %></li>

          <li class="separator">

            <i class="icon-angle-right"></i>

          </li>

          <li class="active"><%= model_class.model_name.human.pluralize.titleize %></li>

        </ul>

      </div>

    </div>

  </div>

</div>

<%= render :partial => 'admin/shared/flash' %>

<div class="box">

  <div class="box-content">

    <% if can? :create, model_class %>

      <div class="btn-toolbar">

        <%= link_to '<i class="icon-plus"></i> New Sticky Banner'.html_safe, new_admin_banner_path(banner_type: 'sticky_banner'), class: 'btn btn-success' %>
        <%= link_to '<i class="icon-plus"></i> New Shop Banner'.html_safe, new_admin_banner_path(banner_type: 'shop_banner'), class: 'btn btn-success' %>
        <%= link_to '<i class="icon-plus"></i> New Sidebar Banner'.html_safe, new_admin_banner_path(banner_type: 'sidebar_banner'), class: 'btn btn-success' %>

      </div>

    <% end %>

    <div class="table-responsive" id="banner-table">
      <div id="app"></div>
    </div>

  </div>

</div>

<div class="form-group">

  <%= ff.label :subtitle, class: 'col-md-2 control-label' %>

  <div class="col-md-10">

    <%= ff.text_field :subtitle, class: 'form-control' %>

  </div>

</div>

<div class="form-group">

  <%= ff.label :image_url, class: 'col-md-2 control-label' %>

  <div class="col-md-10">

    <%= ff.text_field :image_url, class: 'form-control' %>

    <div class="help-block">

      <small>PNG with transparent background or JPG with white background. (1170x350 max)</small>

    </div>

  </div>

</div>

<div class="form-group">

  <%- (0..5).each do |num| -%>

    <div class="col-md-4">

      <h4>Item <%= num + 1 %></h4>

      <label for="">Coupon ID</label>

      <%= text_field_tag 'widget[premium_hero][][coupon_ids]', (@widget.premium_hero[num][:coupon_ids] rescue nil), class: 'form-control', placeholder: 'Coupon ID' %>

      <%= text_field_tag 'widget[premium_hero][][clickout_url]', (@widget.premium_hero[num][:clickout_url] rescue nil), class: 'form-control', placeholder: 'Clickout URL Optional' %>

    </div>

  <%- end -%>

</div>

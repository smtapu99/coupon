  <div class="form-group">
    <%= ff.label :section_one_header, :class => 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= ff.text_field :section_one_header, class: 'form-control', id: 'select2-coupons' %>
      <div class="help-block">Like: Top 10 Sport Shops</div>
    </div>
  </div>

  <div class="form-group">
    <%= ff.label 'Shop', :class => 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= ff.select :shops, Shop.by_site.active.collect { |x| [x.title, x.id] }, { include_blank: true }, { :multiple => true, class: 'select2 form-control' } %>
      <div class="help-block">10 shops Max</div>
    </div>
  </div>

  <div class="form-group">
    <%= ff.label :section_two_header, :class => 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= ff.text_field :section_two_header, class: 'form-control', id: 'select2-coupons' %>
      <div class="help-block">Like: Top 3 Beauty Coupons</div>
    </div>
  </div>

  <div class="form-group">
    <%= ff.label :coupon_ids, :class => 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= ff.text_field :coupon_ids, class: 'form-control', id: 'select2-coupons' %>
      <div class="help-block">like: 12345,12346; If active they will appear in the order in which you put them.</div>
    </div>
  </div>

  <div class="form-group">
    <%= ff.label :image_url, :class => 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= ff.text_field :image_url, class: 'form-control', id: 'select2-coupons' %>
      <div class="help-block">Banner. PNG or JPG 360x360px</div>
    </div>
  </div>

  <div class="form-group">
    <%= ff.label :clickout_url, :class => 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= ff.text_field :clickout_url, class: 'form-control', id: 'select2-coupons' %>
      <div class="help-block">Banner clickout URL</div>
    </div>
  </div>

<script>
  jQuery('#widget_shops').select2({
    allowClear: true,
    placeholder: 'Type your shop here... ',
    width: 'resolve',
    maximumSelectionSize: 10
  });
</script>

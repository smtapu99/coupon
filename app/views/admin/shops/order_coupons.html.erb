<%- model_class = Shop -%>
<%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
<%= javascript_tag "var SHOP_CURRENT = #{@shop.present? ? @shop.id : '0'};" %>

<div class="row">
  <div class="col-xs-12">
    <div class="page-header">

      <!-- page title -->
      <h1 class="pull-left">
        <i class="icon-tags"></i>
        <span>Sort Coupons on <%= @shop.title %></span>
      </h1>

      <!-- breadcrumbs -->
      <div class="pull-right">
        <ul class="breadcrumb">
          <li>
            <a href="/pcadmin">
              <i class="icon-tags"></i>
            </a>
          </li>
          <li class="separator">
            <i class="icon-angle-right"></i>
          </li>
          <li class="active"><%= model_class.model_name.human.pluralize.titleize %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<%= render :partial => 'admin/shared/flash' %>

<div class="row">
  <div class="col-xs-12">
    <div class="box-content" id="prioritize_coupons">

      <%= render partial: 'prioritizable_coupons', locals: { coupons: @coupons } %>

    </div>
  </div>
</div>


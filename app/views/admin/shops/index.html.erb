<%- content_for(:head_scripts) do -%>

  <script type="text/javascript">var authorized_to_reset_votes = <%= can?(:reset_votes, Shop).to_s %></script>

<%- end -%>

<% model_class = Shop %>

<div class="row">

  <div class="col-xs-12">

    <div class="page-header">

      <h1 class="pull-left">

        <i class="icon-tags"></i>

        <span><%= t '.title', default: model_class.model_name.human.pluralize.titleize %></span>

      </h1>

      <div class="pull-right">

        <ul class="breadcrumb">

          <li>

            <a href="/pcadmin">

              <i class="icon-home"></i>

            </a>

          </li>

          <li class="separator">

            <i class="icon-angle-right"></i>

          </li>

          <li class="active"><%= model_class.model_name.human.pluralize.titleize %></li>

        </ul>

      </div>

    </div>

  </div>

</div>

<%= render partial: 'admin/shared/flash' %>


<div class="box">

  <div class="box-content">

    <div class="btn-toolbar">

      <%= link_to '<i class="icon-plus"></i> New Shop'.html_safe, new_admin_shop_path, class: 'btn btn-success' %>

      <% if can? :read, ShopImport %>

        <%= link_to '<i class="icon-upload"></i> Import Shops'.html_safe, admin_shop_imports_path, class: 'btn btn-primary' %>

      <% end %>

      <%= link_to '<i class="icon-download"></i> Export XLS'.html_safe, export_modal_admin_shops_path, data: {remote: true}, class: 'btn btn-info' %>

    </div>

    <div class="table-responsive">

      <div id="app"></div>

    </div>

  </div>

</div>

<div class="row">
  <div class="col-xs-12">
    <div class="page-header">
      <h1 class="pull-left">
        <i class="icon-file"></i>
        <span><%=t '.template_title', default: 'Templates' %></span>
      </h1>
      <div class="pull-right">
        <ul class="breadcrumb">
          <li>
            <a href="/pcadmin">
              <i class="icon-home"></i>
            </a>
          </li>
          <li class="separator">
            <i class="icon-angle-right"></i>
          </li>
          <li class="active"><%=t '.template_title', default: 'Templates' %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<%= render partial: 'admin/shared/flash' %>
<div class="box">
  <div class="box-content">
    <div class="btn-toolbar">

      <div class="pull-right">
        <h4><label for="s2id_template_select">Please Select a Template</label></h4>
        <%=  select_tag "template",options_for_select(
          [['Custom Layout' , 'cl'],
          ['Head Scripts' , 'hs'],
          ['Body Scripts' , 'bs'],
          ['Footer Scripts' , 'fs'],
          ['Mobile Custom Layout', 'mcl']], params[:template]),
        {class: 'select2 form-control', id: 'template_select'} %>
        <span id="template_type" style="display: none;"><%= params[:template] %></span>
      </div>
      <%= button_tag '<i class="icon-file"></i> Get Default'.html_safe, class: 'btn btn-warning', id: 'default_template_button' %>
      <%= button_tag '<i class="icon-pencil"></i> Save Layout'.html_safe, class: 'btn btn-success', id: 'update_template_button' %>
      <%= button_tag '<i class="icon-remove"></i> Delete Layout'.html_safe, class: 'btn btn-danger', id: 'delete_template_button' %>
      <br /><span id="dirty_state" class="label label-success">&nbsp;</span>
    </div>
    <textarea name="" id="" style="width: 100%;min-height: 350px;" class="codearea"></textarea>
  </div>
</div>

<div class="box bordered-box blue-border">
  <div class="box-header red-background">
    <div class="title">
      <i class="icon-question-sign"></i>
      <%=t '.available_tags', default: 'Available Tags and Help' %>
    </div>
    <div class="actions">
      <a class="btn box-collapse btn-xs btn-link" href="#">
        <i></i>
      </a>
    </div>
  </div>
  <div class="box-content">
    <table class="table table-responsive table-striped">
      <thead>
        <th style="width: 30%">Tag</th>
        <th>renders to ...</th>
      </thead>
      <tbody>
        <tr>
          <td>{{snippet_header}}</td>
          <td><%=t '.snippet_header', default: 'The header area containing H1, Logo and Social Widgets' %></td>
        </tr>
        <tr>
          <td>{{snippet_header_logo}}</td>
          <td><%=t '.snippet_header_logo', default: 'The logo' %></td>
        </tr>
        <tr>
          <td>{{snippet_navigation}}</td>
          <td><%=t '.snippet_navigation', default: 'The main Navigation' %></td>
        </tr>
        <tr>
          <td>{{snippet_breadcrumbs}}</td>
          <td><%=t '.snippet_breadcrumbs', default: 'The Breadcrumbs, eventually they need some styling first' %></td>
        </tr>
        <tr>
          <td>{{snippet_search_form}}</td>
          <td><%=t '.snippet_search_form', default: 'The big search form' %></td>
        </tr>
        <tr>
          <td>{{main_content}}</td>
          <td><%=t '.main_content', default: 'Required! The whole content of the site' %></td>
        </tr>
        <tr>
          <td>{{snippet_footer}}</td>
          <td><%=t '.snippet_footer', default: 'The footer area, containing footer and disclaimer' %></td>
        </tr>
      </tbody>
    </table>
    <h4>Hints</h4>
    <ul>
      <li><%=t '.markup_help', default: 'You should also try to keep the basic markup structure containing div#wrapper and div.container' %></li>
      <li><%=t '.ctrl_s_help', default: 'You can use CRTL + S to save the template' %></li>
      <li><%=t '.ctrl_z_help', default: 'You can use CTRL + Z to revert the latest changes' %></li>
      <li><%=t '.restore_default_help', default: 'Restore Default deletes all your changes, really be sure to click this button' %></li>
    </ul>
  </div>
</div>

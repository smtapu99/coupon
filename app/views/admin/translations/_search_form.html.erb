<div class="col-sm-12">

  <div class="box">

    <div class="box-header blue-background">

      <div class="title">

        <div class="icon-edit"></div>

        Translation Form

      </div>

    </div>

    <div class="box-content">

      <%= form_tag admin_translations_path, class: 'form form-horizontal', method: :get, style: 'margin-bottom: 0' do |f| %>

        <div class="form-group">

          <div class="col-md-6">

            <%= text_field_tag :search, params[:search], placeholder: 'Search for keys or values', class: 'form-control' %>

          </div>

          <div class="col-md-6">

            <%= submit_tag 'Search', class: 'btn btn-primary' %>

            <%= link_to 'New', new_admin_translation_path, class: 'btn btn-success block' %>

            <%= link_to 'Download Translations', export_keys_admin_translations_path, class: 'btn btn-inverse' %>

          </div>

        </div>

      <% end %>

    </div>

  </div>

</div>

<% if @translations.any? %>

  <div id="search-results">

    <% @translations.each do |translation| %>

      <div class="col-sm-12">

        <div class="box">

          <div class="box-content">

            <h4><%= link_to translation.key, edit_admin_translation_path(translation.id), class: 'text-contrast' %></h4>

            <% if translation.value %>

              <p><%= translation.value %></p>

            <% end %>

          </div>

        </div>

      </div>

    <% end %>

  </div>

<% end %>
